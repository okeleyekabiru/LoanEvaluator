@using System.Web.UI.WebControls
@model Loan.Data.Models.Loans

@{
    ViewBag.Title = "Loan Comparer";

    Layout = null;
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title -->
    <title>Credit - Loan &amp; Credit Company HTML Template</title>

    <!-- Favicon -->
    <link rel="icon" href="/Content/img/core-img/favicon.ico">

    <!-- Stylesheet -->
    <link rel="stylesheet" href="/Content/style.css">

</head>

<body>
    <!-- Preloader -->
    <div class="preloader d-flex align-items-center justify-content-center">
        <div class="lds-ellipsis">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>

    <!-- ##### Header Area Start ##### -->
    <header class="header-area">
        <!-- Top Header Area -->
        <div class="top-header-area">
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <div class="col-12 d-flex justify-content-between">
                        <!-- Logo Area -->
                        <div class="logo">
                            @* <a href="index.html"><img src="/Content/img/core-img/logo.png" alt=""></a> *@
                            <a href="index.html"><img src="/Content/img/LoanEvaluator.png" alt="" style="width: 7em;"></a>
                        </div>

                        <!-- Top Contact Info -->
                        <div class="top-contact-info d-flex align-items-center">
                            <a href="#" data-toggle="tooltip" data-placement="bottom" title="2 nd Tradition building igbo efon"><img src="/Content/img/core-img/placeholder.png" alt=""> <span>2 nd Tradition building igbo efon</span></a>
                            <a href="#" data-toggle="tooltip" data-placement="bottom" title="creditoffice@yourfirm.com"><img src="/Content/img/core-img/message.png" alt=""> <span>creditoffice@yourfirm.com</span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navbar Area -->
        <div class="credit-main-menu" id="sticker">
            <div class="classy-nav-container breakpoint-off">
                <div class="container">
                    <!-- Menu -->
                    <nav class="classy-navbar justify-content-between" id="creditNav">

                        <!-- Navbar Toggler -->
                        <div class="classy-navbar-toggler">
                            <span class="navbarToggler"><span></span><span></span><span></span></span>
                        </div>

                        <!-- Menu -->
                        <div class="classy-menu">

                            <!-- Close Button -->
                            <div class="classycloseIcon">
                                <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                            </div>

                            <!-- Nav Start -->
                            <div class="classynav">
                                <ul>
                                    <li><a href="@Url.Action("Home","Home")">Home</a></li>
                                    <li><a href="@Url.Action("About","Home")">About Us</a></li>
                                    <li>
                                        <a href="#">Pages</a>
                                        <ul class="dropdown">
                                            <li><a href="@Url.Action("Index","Home")">Home</a></li>
                                            <li><a href="" @Url.Action("About", "Home")>About Us</a></li>

                                            <li><a href="@Url.Action("Contact","Home")">Contact</a></li>

                                        </ul>
                                    </li>

                                    <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                                    @Html.Partial("_LoginPartial")
                                </ul>
                            </div>
                            <!-- Nav End -->
                        </div>

                        <!-- Contact -->
                        <div class="contact">
                            <a href="#"><img src="/Content/img/core-img/call2.png" alt=""> +234 8126136616</a>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <section class="breadcrumb-area bg-img bg-overlay jarallax" style="background-image: url(/Content/img/bg-img/13.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcrumb-content">
                        <h2>Choose from our pool of Loan providers</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="@Url.Action("Home","Home")">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Apply For A Loan</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();
        <div class="jumbotron">
            <div class="d-flex justify-content-center mt-5">
                <div>
                    <h2 class="text-warning">
                        We are with you
                        Your financial friend.
                    </h2>
                </div>

            </div>
        </div>
        <div class="form-horizontal">

            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-8">
                    <div class="form-group">
                        @Html.LabelFor(model => model.amountToBeBorrrowed, htmlAttributes: new { @class = "control-label text-warning col-md-2 " })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.amountToBeBorrrowed, new { htmlAttributes = new { @class = "form-control-lg" } })
                            @Html.ValidationMessageFor(model => model.amountToBeBorrrowed, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.LoanPurpose, htmlAttributes: new { @class = "control-label col-md-2 text-warning" })
                        <div class="col-md-10 ">
                            @Html.EnumDropDownListFor(model => model.LoanPurpose, new { htmlAttributes = new { @class = "form-control-lg" } })
                            @Html.ValidationMessageFor(model => model.LoanPurpose, "", new { @class = "text-danger " })
                        </div>

                    </div>
                    <div class="form-group ">
                        @Html.LabelFor(model => model.Duration, htmlAttributes: new { @class = "control-label col-md-2 text-warning" })
                        <div class="col-md-10 ">
                            @Html.EnumDropDownListFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger " })
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="submit" class="btn btn-warning" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
    <footer class="footer-area section-padding-100-0">
        <div class="container">
            <div class="row">

                <!-- Single Footer Widget -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="single-footer-widget mb-100">
